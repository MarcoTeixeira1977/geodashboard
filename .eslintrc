{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Handlebars": true,
    "describe": true,
    "test": true,
    "expect": true
  },
  "rules": {
    "no-underscore-dangle": "off",
    "no-param-reassign": [
      "error", {
        "props": false
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": ["**/webpack.*.js", "**/*.spec.js"]
      }
    ],
    "max-len": [
      "error", {
        "code": 100,
        "ignoreComments": true
      }
    ],
    "prefer-destructuring": "off",
    "no-plusplus": "off"
  }
}
